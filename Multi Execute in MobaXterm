cls

try
{




    $api = "https://mercury/SecretServer/api/v1"
    $tokenRoute = "https://mercury/SecretServer/oauth2/token";

    $creds = @{
        username = "APIUSERNAME"
        password = "APIPASSWORD"
        grant_type = "password"
 }
    $token = ""
    $response = Invoke-RestMethod $tokenRoute -Method Post -Body $creds
    $token = $response.access_token;

    $headers = New-Object "System.Collections.Generic.Dictionary[[String],[String]]"
    $headers.Add("Authorization", "Bearer $token")

    
  
    $pw1 = Invoke-RestMethod "$api/secrets/6/fields/password" -Headers $headers  -Method get
    $un1 = Invoke-RestMethod "$api/secrets/6/fields/username" -Headers $headers  -Method get
    $mc1 = Invoke-RestMethod "$api/secrets/6/fields/machine" -Headers $headers  -Method get

    
    $pw2 = Invoke-RestMethod "$api/secrets/15/fields/password" -Headers $headers  -Method get
    $un2 = Invoke-RestMethod "$api/secrets/15/fields/username" -Headers $headers  -Method get
    $mc2 = Invoke-RestMethod "$api/secrets/15/fields/machine" -Headers $headers  -Method get
 
    
    
Start-Process "C:\Program Files (x86)\Mobatek\MobaXterm\MobaXterm.exe" -ArgumentList "-newtab ""sshpass -p '$pw2' ssh $un2@$mc2"" "
Start-Sleep -s 10
Start-Process "C:\Program Files (x86)\Mobatek\MobaXterm\MobaXterm.exe" -ArgumentList "-newtab ""sshpass -p '$pw1' ssh $un1@$mc1"" "

   
}
catch [System.Net.WebException]
{
    Write-Host "----- Exception -----"
    Write-Host  $_.Exception
    Write-Host  $_.Exception.Response.StatusCode
    Write-Host  $_.Exception.Response.StatusDescription
    $result = $_.Exception.Response.GetResponseStream()
    $reader = New-Object System.IO.StreamReader($result)
    $reader.BaseStream.Position = 0
    $reader.DiscardBufferedData()
    $responseBody = $reader.ReadToEnd() | ConvertFrom-Json
    Write-Host  $responseBody.errorCode " - " $responseBody.message
    foreach($modelState in $responseBody.modelState)
    {
        $modelState
    }
}
